{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "NodeNext",                                
    "outDir": "./dist",                                    
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop":true,
    "forceConsistentCasingInFileNames": true,                          
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
